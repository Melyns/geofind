name: CI-Win

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: windows-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install MSYS2
        run: |
          choco install -y msys2
          RefreshEnv.cmd

      - name: Update MSYS2 packages
        run: |
          pacman -Syu --noconfirm

      - name: Install build dependencies
        run: |
          pacman -S --noconfirm mingw-w64-x86_64-curl mingw-w64-x86_64-json-c

      - name: Build
        run: |
          gcc geofind.c -o geofind -L/mingw64/lib -lcurl -ljson-c

      - name: Run tests
        run: |
        
